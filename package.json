{
  "name": "manateeam-blog",
  "author": "Naomi Hauret",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Manateeam blog (with a twist)",
  "scripts": {
    "setup": "npm install && npm run prepare",
    "prepare": "husky install",
    "dev": "next",
    "build": "next build",
    "prod": "npm run build && next start",
    "start": "npm run dev",
    "cy:open": "cypress open",
    "test:e2e": "npm run cy:open",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "css:prettify": "prettier --parser=css --write \"./{pages,components,styles}/**/*.css\"",
    "js:prettify": "prettier --parser=babel --write \"./{components,pages,hooks,contexts,styles,libs,utils,tests}/**/*.{js,ts,tsx}\"",
    "format": "npm run css:prettify && npm run js:prettify",
    "cm": "cz",
    "postbuild": "next-sitemap"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-add": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json": [
      "prettier --write",
      "git add"
    ],
    "*.{css}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": [
    "> 1%",
    "not dead"
  ],
  "dependencies": {
    "next": "^10.2.0",
    "prismic-javascript": "^3.0.2",
    "prismic-reactjs": "^1.3.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@types/node": "^15.0.1",
    "@types/react": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "autoprefixer": "^10.2.5",
    "browserslist": "^4.16.6",
    "cypress": "^7.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "next-sitemap": "^1.6.49",
    "postcss": "^8.2.13",
    "postcss-custom-media": "^8.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-normalize": "^10.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.1.2",
    "tailwindcss-logical": "^1.4.0",
    "typescript": "^4.2.4"
  }
}
